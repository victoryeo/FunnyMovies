<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-12">
      <h2>Share new video</h2>
      <% if user_signed_in? %>
       <%= simple_form_for @video, html: { multipart: true } do |f| %>
        <%= f.input :name %>
        <%= f.input :video_url %>
        <%= f.button :submit, class: 'btn-primary', value: 'Share Video' %>
       <% end %>
      <% else %>
        <%= link_to 'Login', new_user_session_path %>
      <% end %>
    </div>
  </div>
</div>
